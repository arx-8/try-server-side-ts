{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/dist/index.js",
      "preLaunchTask": "dev_build"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
